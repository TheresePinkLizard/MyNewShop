@model Item

<!--Html for Ã¥ kunne legge inn ny data CRUD

The form does not have a form field for ItemId, because it is an auto-generated property
with a unique value generated by the database.-->

<h2>Create New Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span> <!--The asp-for attribute is a tag helper in ASP.NET Core that helps with model binding and validation. It is used to associate a form input element with a specific property of the model class-->
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span> <!--Vertifiserer bruker sitt input mot Item Model. defined by Models/Item.cs-->
    </div>
     <div class="form-group">
        <label asp-for="Price"></label><span class="text-danger">*</span>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Description"></label> <!--Other properties like Description and ImageUrl are allowed to be empty since they are nullable-->
        <input asp-for="Description" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
</form>